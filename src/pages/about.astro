---

import BaseLayout from '../layouts/BaseLayout.astro';

const identity = {
  name: "Elchin Huseynli",
  country: "Czech Republic",
  city: "Karlovy Vary",
  age: 39,
  occupation: "Software Engineer",
};
const pageTitle = "About Me";

const hobbies = ["Coding", "Reading", "Traveling", "Gaming"];
const skills = ["HTML", "CSS", "JavaScript", "React", "Node.js", "MongoDB"];

const happy = true;
const finished = false;
const goal = 3;
const skillColor = "crimson";
const fontSize = "24px";
const textCase = "uppercase";
---

<BaseLayout
  pageTitle={pageTitle}
  pageDescription={"Learn more about me"}>
  <p>Hello! My name is {identity.name}, and I am a {identity.age}-year-old software engineer based in {identity.city}, {identity.country}.</p>

  <h3>Hobbies</h3>
  <ul>
    {hobbies.map((hobby) => (
      <li>{hobby}</li>
    ))}
  </ul>

  <h3>Skills</h3>
  <ul>
    {skills.map((skill) => (
      <li style={`color: ${skillColor}; font-size: ${fontSize}; text-transform: ${textCase};`}>{skill}</li>
    ))}
  </ul>

  <h3>Current Status</h3>
  <p>I am currently {happy ? "happy" : "not happy"} with my career and {finished ? "have" : "have not"} achieved my goal of learning {goal} new programming languages this year.</p>
